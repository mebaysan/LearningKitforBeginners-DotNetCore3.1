@model SaveCustomerViewModel
@{ 
    ViewData["Title"] = "Müşteri Ekle"; // ViewBag içerisinde Title isimli değişken var (_MyLayout içerisinde) onu set ediyoruz.
}


<h3 class="alert alert-success">Müşteri Ekle</h3>
<form asp-controller="Customer" asp-action="SaveCustomer">
    <!-- hangi controller ve action (tag helperlar yardımı ile)  -->
    Id: <input asp-for="Customer.Id" /><br /> <!-- asp-for -> modeldeki hangi alana denk gelecek   -->
    Adı: <input asp-for="Customer.FirstName" /><br />
    Soyadı: <input asp-for="Customer.LastName" /><br />
    Şehir: <select asp-for="Customer.City" asp-items="Model.Cities"></select>
    <!-- asp-items -> select-box'ın itemleri -->
    <button type="submit">Kaydet</button>
</form>


@section OzelScriptler{
    <script>
        console.log('Özel script çalıştı!');
    </script>
}