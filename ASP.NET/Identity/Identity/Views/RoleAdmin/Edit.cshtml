@model Identity.Models.RoleEditViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Role</h2>

@using (Html.BeginForm())
{
    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <div class="panel panel-primary">
        <div class="panel-heading">
            Add to @Model.Role.Name
        </div>
        <table class="table table-bordered table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">No users can be added to this role!</td></tr>
            }
            else
            {
                <tr>
                    <td>User Id</td>
                    <td>Role</td>
                </tr>
                foreach (var user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td><input type="checkbox" name="IdsToAdd" value="@user.Id" /></td>

                    </tr>
                }
            }
        </table>
    </div>


    <div class="panel panel-primary">
        <div class="panel-heading">
            Remove from @Model.Role.Name
        </div>
        <table class="table table-bordered table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">There are no users that can be deleted from this role!</td></tr>
            }
            else
            {
                <tr>
                    <td>User Id</td>
                    <td>Role</td>
                </tr>
                foreach (var user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>


    <button type="submit" class="btn btn-success">Save</button>
}