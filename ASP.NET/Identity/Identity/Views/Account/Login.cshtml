@model Identity.Models.LoginAccountViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />
@Html.ValidationSummary() <!-- İnputlardan dönen hataları yazar -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(i => i.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Username</label>
        @Html.PasswordFor(i => i.Password, new { @class = "form-control" })
    </div>
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
 <!-- Account/Login controller'a gidince sonunda bir ReturnUrl oluyor(get kısmında)  -->
    <button type="submit" class="btn btn-info">Login</button>

}
