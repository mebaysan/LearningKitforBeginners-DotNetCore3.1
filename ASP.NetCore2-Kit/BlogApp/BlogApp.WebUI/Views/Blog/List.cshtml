@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Blog List</h2>
<hr />
<div>
    <a href="/blog/create" class="btn btn-primary">Create Blog</a>
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped mt-3">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>isApproved</th>
                            <th>is Home</th>
                            <th>is Slider</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blog in Model)
                        {
                            <tr>
                                <td>@blog.BlogId</td>
                                <td>
                                    <img src="~/img/@blog.Image" width="100" />
                                </td>
                                <td>@blog.Title</td>
                                <td>@blog.Date</td>
                                <td>
                                    @if (@blog.isApproved)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i><!--eğer blog.isApproved true ise dedik -->
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    @if (@blog.isHome)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i><!--eğer blog.isApproved true ise dedik -->
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    @if (@blog.isSlider)
                                    {
                                        <i class="fa fa-check" aria-hidden="true"></i><!--eğer blog.isApproved true ise dedik -->
                                    }
                                    else
                                    {
                                        <i class="fa fa-times" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.BlogId">
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.BlogId">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Henüz blog eklenmemiş.
                </div>
            }
        </div>
    </div>
</div>

